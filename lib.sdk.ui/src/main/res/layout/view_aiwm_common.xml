<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="86dp"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/caton_view"
        android:layout_width="42dp"
        android:layout_height="42dp"
        tools:src="@drawable/pic_head_ft"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/tvSayWords1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/caton_view"
        tools:text="你可以说"
        android:textColor="#66ffffff"
        android:textSize="19dp"/>

    <TextView
        android:id="@+id/tvSayWords2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:gravity="center"
        tools:text="“方糖”"
        android:layout_toRightOf="@id/tvSayWords1"
        android:textColor="#ffffff"
        android:textSize="19dp"/>

    <com.fangtang.tv.sdk.ui.tips.TipGroupLayout
        android:id="@+id/tipGroupLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:nextFocusLeft="@id/tipGroupLayout"
        android:nextFocusRight="@id/tipGroupLayout"
        android:layout_marginLeft="4dp"
        android:layout_toRightOf="@id/tvSayWords2"/>

</RelativeLayout>
